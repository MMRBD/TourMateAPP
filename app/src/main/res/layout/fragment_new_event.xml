<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mokle.tourmateapp.NewEventFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/etx_t_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Travel Destination"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etx_est_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Estimate Budget"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etx_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Start Date"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etx_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="End Date"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_save_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD EVENT" />
</LinearLayout>
